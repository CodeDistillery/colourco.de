@import 'nib'

html
body
.home
  width 100%
  height 100%
  padding 0
  margin 0
  font-family "Proxima Nova", "sans-serif"
  font-weight 300

.home
  color #c4c5c6
  background #092756
  background -moz-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%),-moz-linear-gradient(top, rgba(57,173,219,.25) 0%, rgba(42,60,87,.4) 100%), -moz-linear-gradient(-45deg, #670d10 0%, #092756 100%)
  background -webkit-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%), -webkit-linear-gradient(top, rgba(57,173,219,.25) 0%,rgba(42,60,87,.4) 100%), -webkit-linear-gradient(-45deg, #670d10 0%,#092756 100%)
  background -o-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%), -o-linear-gradient(top, rgba(57,173,219,.25) 0%,rgba(42,60,87,.4) 100%), -o-linear-gradient(-45deg, #670d10 0%,#092756 100%)
  background -ms-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%), -ms-linear-gradient(top, rgba(57,173,219,.25) 0%,rgba(42,60,87,.4) 100%), -ms-linear-gradient(-45deg, #670d10 0%,#092756 100%)
  background -webkit-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%), linear-gradient(to bottom, rgba(57,173,219,.25) 0%,rgba(42,60,87,.4) 100%), linear-gradient(135deg, #670d10 0%,#092756 100%)

nav
  position absolute
  top 0px
  left 0px
  bottom 30px
  width 200px
  background rgba(#fff, .1)
  h3
    color #fff
    margin-top 10px
    font-size 25px
    text-align center
    font-weight 300
    line-height 1.4em 
    box-shadow 0 1px 0 0 rgba(#fff, .1), 0 2px 0 0 rgba(#000, .03)
  ul
    li
      cursor pointer
      font-size 20px
      line-height 40px
      box-shadow 0 1px 0 0 rgba(#fff, .1), 0 2px 0 0 rgba(#000, .03)
      background rgba(#fff, 0)
      padding-left 5px
      transition border-left .4s ease, background .4s ease
      span
        transition color .4s ease
      &:hover
      &.active
        background rgba(#fff, .3)
        &.free span
          color #fff
        &.mono
          span:nth-child(1) { color: hsl(0, 50%, 20%); }
          span:nth-child(2) { color: hsl(0, 55%, 25%); }
          span:nth-child(3) { color: hsl(0, 60%, 30%); }
          span:nth-child(4) { color: hsl(0, 65%, 35%); }
          span:nth-child(5) { color: hsl(0, 70%, 40%); }
        &.mono-d
          span:nth-child(1) { color: hsl(0,  0%, 10%); }
          span:nth-child(2) { color: hsl(0,  0%, 25%); }
          span:nth-child(3) { color: hsl(0, 60%, 40%); }
          span:nth-child(4) { color: hsl(0, 65%, 45%); }
          span:nth-child(5) { color: hsl(0, 70%, 50%); }
        &.mono-l
          span:nth-child(1) { color: hsl(0, 50%, 30%); }
          span:nth-child(2) { color: hsl(0, 55%, 35%); }
          span:nth-child(3) { color: hsl(0, 60%, 40%); }
          span:nth-child(4) { color: hsl(0,  0%, 55%); }
          span:nth-child(5) { color: hsl(0,  0%, 70%); }
        &.ana
          span:nth-child(1) { color: hsl(240, 50%, 30%); }
          span:nth-child(2) { color: hsl(300, 55%, 35%); }
          span:nth-child(3) { color: hsl(  0, 60%, 40%); }
          span:nth-child(4) { color: hsl( 60, 65%, 45%); }
          span:nth-child(5) { color: hsl(120, 70%, 50%); }
        &.ana-comp
          span:nth-child(1) { color: hsl(300, 55%, 35%); }
          span:nth-child(2) { color: hsl(  0, 60%, 40%); }
          span:nth-child(3) { color: hsl( 60, 65%, 45%); }
          span:nth-child(4) { color: hsl(180, 50%, 30%); }
          span:nth-child(5) { color: hsl(180, 70%, 50%); }
        &.comp
          span:nth-child(1) { color: hsl(  0, 45%, 25%); }
          span:nth-child(2) { color: hsl(  0, 60%, 40%); }
          span:nth-child(3) { color: hsl(  0, 75%, 55%); }
          span:nth-child(4) { color: hsl(180, 50%, 30%); }
          span:nth-child(5) { color: hsl(180, 70%, 50%); }
        &.triad
          span:nth-child(1) { color: hsl(  0, 45%, 25%); }
          span:nth-child(2) { color: hsl(  0, 60%, 40%); }
          span:nth-child(3) { color: hsl(  0, 75%, 55%); }
          span:nth-child(4) { color: hsl(120, 70%, 50%); }
          span:nth-child(5) { color: hsl(240, 70%, 50%); }
        &.quad
          span:nth-child(1) { color: hsl(  0, 75%, 55%); }
          span:nth-child(2) { color: hsl( 90, 70%, 50%); }
          span:nth-child(3) { color: hsl(180, 70%, 50%); }
          span:nth-child(4) { color: hsl(270, 70%, 50%); }

footer
  position absolute
  background rgba(#fff, .1)
  left 0px
  right 0px
  bottom 0px
  height 29px
  a
    text-decoration none
    color #999
    line-height 29px
    margin-left 15px
    transition color .4s ease
    &:hover
      color inherit

article
  position absolute
  top 0px
  left 201px
  right 201px
  bottom 30px
  background rgba(#fff, .1)

aside
  position absolute
  top 0px
  width 200px
  right 0px
  bottom 30px
  background rgba(#fff, .1)
